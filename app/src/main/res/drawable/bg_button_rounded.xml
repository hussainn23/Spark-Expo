<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid android:color="#00796B" /> <!-- Darker shade for pressed state -->
            <corners android:radius="12dp" />
        </shape>
    </item>
    <item>
        <shape>
            <solid android:color="#009688" /> <!-- Default button color -->
            <corners android:radius="12dp" />
        </shape>
    </item>
</selector>
