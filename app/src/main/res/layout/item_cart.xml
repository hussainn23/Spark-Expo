<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    android:padding="8dp"
    android:background="@drawable/stroke">

    <!-- CheckBox before the ImageView -->
    <CheckBox
        android:id="@+id/item_checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginEnd="8dp"
        android:contentDescription="Select Item"
        android:buttonTint="@color/dark_green"
        android:padding="4dp" />

    <!-- ImageView -->
    <ImageView
        android:id="@+id/item_image"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_toEndOf="@id/item_checkbox"
        android:src="@drawable/med" />

    <!-- Item Name -->
    <TextView
        android:id="@+id/item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/item_image"
        android:layout_marginStart="16dp"
        android:text="Item Name"
        android:textSize="14sp"
        android:textColor="#333333"
        android:textStyle="bold" />

    <!-- Item Quantity -->
    <TextView
        android:id="@+id/item_quantity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_name"
        android:layout_toEndOf="@id/item_image"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:text="Quantity"
        android:textSize="12sp"
        android:textColor="#777777" />

    <!-- Item Price -->
    <TextView
        android:id="@+id/item_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/item_quantity"
        android:layout_toEndOf="@id/item_image"
        android:layout_marginTop="4dp"
        android:layout_marginStart="16dp"
        android:text="Rs.0.00"
        android:textSize="10sp"
        android:textColor="@color/black"
        android:padding="4dp" />



</RelativeLayout>
