<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/dashboardFragment">

    <fragment
        android:id="@+id/dashboardFragment"
        android:name="com.aviator.myapplication.fragment.DashboardFragment"
        android:label="fragment_dashboard"
        tools:layout="@layout/fragment_dashboard" />
    <fragment
        android:id="@+id/productsFragment"
        android:name="com.aviator.myapplication.fragment.products.ProductsFragment"
        android:label="fragment_products"
        tools:layout="@layout/fragment_products" />
    <fragment
        android:id="@+id/productsViewPagerFragment"
        android:name="com.aviator.myapplication.fragment.products.ProductsViewPagerFragment"
        android:label="fragment_products_view_pager"
        tools:layout="@layout/fragment_products_view_pager" >
        <action
            android:id="@+id/action_productsViewPagerFragment_to_productsFragment"
            app:destination="@id/productsFragment" />
        <action
            android:id="@+id/action_productsViewPagerFragment_to_outOfStockProductFragment"
            app:destination="@id/outOfStockProductFragment" />
    </fragment>
    <fragment
        android:id="@+id/outOfStockProductFragment"
        android:name="com.aviator.myapplication.fragment.products.OutOfStockProductFragment"
        android:label="fragment_out_of_stock_product"
        tools:layout="@layout/fragment_out_of_stock_product" />
    <fragment
        android:id="@+id/addProductFragment"
        android:name="com.aviator.myapplication.fragment.AddProductFragment"
        android:label="fragment_add_product"
        tools:layout="@layout/fragment_add_product" />
    <fragment
        android:id="@+id/categoriesFragment"
        android:name="com.aviator.myapplication.fragment.CategoriesFragment"
        android:label="fragment_categories"
        tools:layout="@layout/fragment_categories" />
</navigation>